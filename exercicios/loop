from ast import While


odd_numbers=0
even_numbers=0
number=int(input("coloca um nÃºnero ou um 0 para parar o loop: "))
while number != 0:
    if number % 2 == 1:
        odd_numbers += 1
else:
    even_numbers += 1
number=int(input("coloca um nÃºnero ou um 0 para parar o loop: "))
print("Odd numbers count:", odd_numbers)
print("Even numbers count:", even_numbers) 